@model IEnumerable<MyTrails.Models.Condition>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{
    var zones = Model.Select(x => x.Trail.Zone).Distinct();
}
@for (int i = 0; i < zones.Count(); i++)
{
    <h3>@zones.ElementAt(i)</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trail.TrailName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentSnowCover)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>



        @foreach (var item in Model.Where(x => x.Trail.Zone == zones.ElementAt(i)))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trail.TrailName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentSnowCover)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
        

    </table>
}


