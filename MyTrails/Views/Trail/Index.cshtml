@model IEnumerable<MyTrails.Models.Trail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrailName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Elevation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Miles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InfoHTMLLink)
        </th>
        <th></th>
    </tr>
    @{
        var zones = Model.Select(x => x.Zone).Distinct();
    }
    @for (int i = 0; i < zones.Count(); i++)
    {

        foreach (var item in Model.Where(x => x.Zone == zones.ElementAt(i)))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrailName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Elevation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InfoHTMLLink)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>
    @using (Html.BeginForm("ImportOlympicTrails", "Trail"))
    { 
    
    

    <input type="submit" value="Import Olympic Trails" />
    }

